{
    "api": {
        "chain_name": $long_name,
        "server_addr": $hyperion_api_server_addr,
        "server_port": $hyperion_api_server_port,
        "server_name": $hyperion_api_server_name,
        "provider_name": $hyperion_api_provider_name,
        "provider_url": $hyperion_api_provider_url,
        "chain_api": "",
        "push_api": "",
        "chain_logo_url": "",
        "enable_caching": true,
        "cache_life": 1,
        "limits": {
            "get_actions": 1000,
            "get_voters": 100,
            "get_links": 1000,
            "get_deltas": 1000,
            "get_trx_actions": 200
        },
        "access_log": false,
        "enable_explorer": true,
        "chain_api_error_log": false,
        "custom_core_token": "",
        "enable_export_action": false,
        "v1_chain_cache": [
            {"path": "get_block", "ttl": 3000},
            {"path": "get_info", "ttl": 500},
            {"path": "get_gas_price", "ttl": 500},
            {"path": "last_onchain_block", "ttl": 500},
            {"path": "last_indexed_block", "ttl": 500}
        ],
        "rate_limit_rpm": 100000,
        "rate_limit_allow": []
    },
    "settings": {
        "preview": false,
        "chain": $name,
        "eosio_alias": "eosio",
        "parser": "1.8",
        "auto_stop": $hyperion_indexer_auto_stop,
        "index_version": "v1",
        "debug": true,
        "bp_logs": false,
        "bp_monitoring": false,
        "ipc_debug_rate": 60000,
        "allow_custom_abi": false,
        "rate_monitoring": false,
        "max_ws_payload_mb": 4096,
        "ds_profiling": false,
        "auto_mode_switch": false,
        "hot_warm_policy": false,
        "custom_policy": "",
        "bypass_index_map": false,
        "ship_request_rev": "v0",
        "index_partition_size": 10000000
    },
    "blacklists": $hyperion_indexer_blacklists,
    "whitelists": $hyperion_indexer_whitelists,
    "scaling": {
        "readers": 1,
        "ds_queues": 3,
        "ds_threads": 1,
        "ds_pool_size": 2,
        "indexing_queues": 1,
        "ad_idx_queues": 1,
        "max_autoscale": 4,
        "batch_size": 10000,
        "resume_trigger": 5000,
        "auto_scale_trigger": 20000,
        "block_queue_limit": 50000,
        "max_queue_limit": 100000,
        "routing_mode": "round_robin",
        "polling_interval": 10000
    },
    "indexer": {
        "start_on": $hyperion_indexer_start_on,
        "stop_on": $hyperion_indexer_end_on,
        "rewrite": $hyperion_indexer_rewrite,
        "purge_queues": false,
        "live_reader": $hyperion_indexer_live_reader,
        "live_only_mode": false,
        "abi_scan_mode": false,
        "fetch_block": true,
        "fetch_traces": true,
        "disable_reading": false,
        "disable_indexing": false,
        "process_deltas": true
    },
    "features": {
        "streaming": {
            "enable": true,
            "traces": true,
            "deltas": true
        },
        "tables": {
            "proposals": true,
            "accounts": true,
            "voters": true
        },
        "index_deltas": true,
        "index_transfer_memo": false,
        "index_all_deltas": true,
        "deferred_trx": false,
        "failed_trx": false,
        "resource_limits": false,
        "resource_usage": false
    },
    "prefetch": {
        "read": 50,
        "block": 100,
        "index": 500
    },
    "plugins": $plugins
}

